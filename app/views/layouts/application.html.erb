<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='container'>
    <div>
      <nav class="navbar navbar-expand-lg bg-light border-right ml-auto">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <h1 class="nav-link">Dinner Dash</h1>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">

          <% if user_signed_in? %>
            <li class="nav-link">
              <%= image_tag(current_user.avatar , class: 'rounded-circle', size: "50x50") %>
            </li>
            <li class="nav-link">
              <%= current_user.display_name %>
            </li>
            <li class="nav-link">
              <%= link_to 'Cart', cart_path(current_user.cart), class: "nav-links" %>
            </li>
            <li class="nav-link">
              <%= link_to 'Dashbaord', '/' %>
            </li>
          <% end %>

        <li class="nav-link">
          <% if user_signed_in? %>
            <%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
    <%= yield %>
  </body>
</html>
