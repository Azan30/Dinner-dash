<%= form_with model: @item, local: true do |form| %>

  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@item.errors.count, "error") %> prohibited
        this item from being saved:
      </h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %><br />
    <%= form.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :description %><br />
    <%= form.text_field :description, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :price %><br />
    <%= form.text_field :price, autofocus: true %>
  </div>

  <div>
    <%= form.label :Categories %> <br>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :title %> <br>
  </div>

  <p>
    <br>
    <%= form.submit %>
  </p>

<% end %>
